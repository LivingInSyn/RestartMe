<Window x:Class="RestartMe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestartMe"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="400"
        Icon="images\myicon.ico">
    <Window.Background>
        <SolidColorBrush Color="Gray"></SolidColorBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="250" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Foreground="White" Grid.Row="0">
            Do you want to restart the machine?
        </TextBlock>
        <Button Grid.Row="1" Margin="10" FontWeight="Bold" FontSize="18" Click="Restart_Click">
            Restart Now
        </Button>
    </Grid>
</Window>
